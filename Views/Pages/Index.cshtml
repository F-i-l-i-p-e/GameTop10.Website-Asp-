@model IEnumerable<GameInfoApp.Models.GameModel> // Defining model

<h1>TOP 10</h1> 

<!-- Carousel start -->
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <!-- Carousel indicators start -->
    <ol class="carousel-indicators">
        @for (var i = 0; i < Model.Count(); i++) // Loop through model data
        {
            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            // Active carousel indicator
        }
    </ol>
    <!-- Carousel inner start -->
    <div class="carousel-inner">
        @for (var i = 0; i < Model.Count(); i++) // Loop through model data
        {
            var game = Model.ElementAt(i); // Current game
            <!-- Carousel item start -->
            <div class="carousel-item @(i == 0 ? "active" : "")">
                <img class="d-block w-100" src="@game.ImageUrl" alt="@game.Name"> 
                <div class="carousel-caption d-none d-md-block">
                    <h5>@game.Name</h5> 
                    <p>@game.Description</p> 
                </div>
            </div>
            <!-- Carousel item end -->
        }
    </div>
    <!-- Carousel control prev -->
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <!-- Carousel control next -->
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!-- Carousel end -->

<br>

<!-- Game list start -->
<div>
    <h1>Game List</h1> 
    <!-- Table start -->
    <table class="table">
        <!-- Table header start -->
        <thead>
            <tr>
                <th>Top</th>
                <th>Name</th>
                <th>Genre</th>
                <th>Description</th>
                <th>Image</th>
            </tr>
        </thead>
        <!-- Table header end -->
        <!-- Table body start -->
        <tbody>
            @foreach (var game in Model) // Loop through model data
            {
                <tr>
                    <td>@game.Id</td>
                    <td>@game.Name</td>
                    <td>@game.Genre</td>
                    <td>@game.Description</td>
                    <td><img src="@game.ImageUrl" alt="@game.Name" width="200"></td> 
                </tr>
            }
        </tbody>
        <!-- Table body end -->
    </table>
    <!-- Table end -->
</div>
<!-- Game list end -->
